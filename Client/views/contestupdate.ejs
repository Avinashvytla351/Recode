<!DOCTYPE html>
<html lang="en" class="no-js">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin menu</title>
    <meta
      name="description"
      content="A sidebar menu as seen on the Google Nexus 7 website"
    />
    <meta
      name="keywords"
      content="google nexus 7 menu, css transitions, sidebar, side menu, slide out menu"
    />
    <meta name="author" content="Codrops" />
    <link rel="shortcut icon" href="../favicon.ico" />
    <link rel="icon" type="image/png" href="../../images/logo-backup2.png" />
    <script src="/adminjs/modernizr.custom.js"></script>
    <link rel="stylesheet" href="../../css/navadmin.css" />
  </head>
  <body>
    <div class="container">
      <%- include('../views/partials/adminpanel') %>
      <header>
        <h1>
          Manage Contests<span style="color: black">Update Contests</span>
        </h1>
      </header>
      <div class="main-block">
        <form
          action="<%= data.serverurl %>/contests/<%= data.contestId %>"
          method="POST"
        >
          <span class="allInputs">
            <span class="inputf">
              <p class="comments">Contest ID</p>
              <input
                name="contestId"
                rows="5"
                value="<%= data.contestId %>"
                class="small"
                placeholder="ID"
              />
            </span>
            <span class="inputf">
              <p class="comments">Contest Name</p>
              <input
                name="contestName"
                rows="5"
                value="<%= data.contestName %>"
                class="small"
                placeholder="Name"
              />
            </span>
          </span>
          <span class="allInputs">
            <span class="inputf">
              <p class="comments">Contest Date</p>
              <input
                name="contestDate"
                type="date"
                value="<%= data.contestDate %>"
                class="vsmall"
              />
            </span>
            <span class="inputf">
              <p class="comments">Contest Duration</p>
              <input
                name="contestDuration"
                rows="5"
                value="<%= data.contestDuration %>"
                class="vsmall"
                placeholder="in minutes Ex 180"
              />
            </span>
            <span class="inputf">
              <p class="comments">Contest Start Time</p>
              <input
                name="contestStartTime"
                rows="5"
                value="<%= data.contestStartTime %>"
                class="vsmall"
                placeholder="Ex 0000"
              />
            </span>
            <span class="inputf">
              <p class="comments">Contest End Time</p>
              <input
                name="contestEndTime"
                rows="5"
                value="<%= data.contestEndTime %>"
                class="vsmall"
                placeholder="Ex 2359"
              />
            </span>
          </span>
          <span class="allInputs">
            <span class="inputf">
              <p class="comments">Contest Users</p>
              <textarea name="sets" rows="5" class="vlarge" placeholder="Users">
				<%= data.usernames %>
              </textarea>
            </span>
          </span>
          <span class="allInputs">
            <span class="inputf">
              <p class="comments">Contest Password</p>
              <input
                name="sets"
                rows="5"
                value="<%= data.contestPassword %>"
                class="small"
                placeholder="Password"
              />
            </span>
          </span>
          <textarea
            type="hidden"
            name="token"
            id="token"
            value="<%= token %>"
            style="display: none"
          >
<%= token %></textarea
          >
          <div class="btn-block">
            <button class="submit" type="submit" href="/">Send</button>
          </div>
        </form>
      </div>
    </div>
    <!-- /container -->
    <script src="/adminjs/classie.js"></script>
    <script src="/adminjs/gnmenu.js"></script>
    <script>
      new gnMenu(document.getElementById("gn-menu"));
    </script>
    <%- include('../views/partials/footer') %>
  </body>
</html>
