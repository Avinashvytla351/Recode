<!DOCTYPE html>
<html lang="en" class="no-js">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin menu</title>
    <meta
      name="description"
      content="A sidebar menu as seen on the Google Nexus 7 website"
    />
    <meta
      name="keywords"
      content="google nexus 7 menu, css transitions, sidebar, side menu, slide out menu"
    />
    <meta name="author" content="Codrops" />
    <link rel="shortcut icon" href="../favicon.ico" />
    <link rel="stylesheet" href="../../css/navadmin.css" />
    <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon" />
    <script src="/adminjs/modernizr.custom.js"></script>
    <style>
      [type="date"]::-webkit-calendar-picker-indicator {
        opacity: 0;
      }

      #date {
        background: #fff url(../images/icons/calendar-icon.webp) 97% 50%
          no-repeat;
        border: 1px solid #c4c4c4;
        border-radius: 5px;
        padding: 3px 5px;
        box-shadow: inset 0 3px 6px rgba(0, 0, 0, 0.1);
        width: 190px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <%- include('../views/partials/adminpanel') %>
      <header>
        <h1>
          Manage Skill Up 365<span style="color: white">Add Weekly Scores</span>
        </h1>
      </header>
      <div class="main-block">
        <form
          class="fileupload"
          action="<%= data.serverurl %>/skillExcel"
          method="post"
          enctype="multipart/form-data"
        >
          <label for="date"> Select Date:&nbsp; </label>
          <input
            type="date"
            name="date"
            value=""
            onclick="myFunction()"
            id="date"
          />
          <br />
          <br />
          <label for="upload"> Browse File: </label>
          <input type="file" name="upfile" id="upload" value="" />
          <a href="./images/sample.xlsx">Sample CSV</a><br />
          <textarea
            type="hidden"
            name="token"
            id="token"
            value="<%= token %>"
            style="display: none"
          ></textarea>
          <input type="submit" />
        </form>
      </div>
    </div>
    <!-- /container -->
    <script src="/adminjs/classie.js"></script>
    <script src="/adminjs/gnmenu.js"></script>
    <script>
      new gnMenu(document.getElementById("gn-menu"));
    </script>
    <script>
      document.getElementById("token").value = "<%= token %>";
    </script>
    <script>
      function myFunction() {
        const d = new Date();
        const ye = new Intl.DateTimeFormat("en", { year: "numeric" }).format(d);
        const mo = new Intl.DateTimeFormat("en", { month: "2-digit" }).format(
          d
        );
        const da = new Intl.DateTimeFormat("en", { day: "2-digit" }).format(d);
        var y = document.getElementById("date");
        y.setAttribute("value", `${ye}-${mo}-${da}`);
      }
    </script>
  </body>
</html>
