  <link rel="stylesheet" href="../css/style2.css">
  <style>
    .counters{
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: space-evenly;
      flex-wrap: wrap;
      margin: 10px 0px;
    }
    .counter{
      font-family: poppins;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      font-size: x-large;
      background: rgb(243, 243, 243);
      color: rgb(0, 110, 219);
      padding: 25px;
      border-radius: 2mm;
      box-shadow: 15px 15px 0px rgba(33, 33, 33, 0.2);
      font-weight: bold;
      transition: 0.25s;
    }
    .counter:hover{
      box-shadow: 2px 2px 0px rgba(33, 33, 33, 0.2);
    }
    .counter span{
      font-size: medium;
      font-weight: 400;
      text-shadow:inset 1px 1px rgba(0, 18, 76, 0.2);
    }
    .main-space{
        background: white;
        color: black;
    }
    .content .small{
      color: rgb(76, 76, 76);
    }
    .content .big{
      color: rgb(39, 39, 39);
      overflow: hidden;
      border-right: 0.05em solid orange;
      width: 0;
      animation: typing 1s steps(8, end) forwards, blink-caret 0.8s infinite;
    }
    .rside span{
      color: gold;
    }
    .lside span{
      color: rgba(0, 0, 0, 0.135);
    }
    .lsideup span{
      color: rgb(138, 180, 248);
    }
    @keyframes typing {
  from {
    width: 0;
  }
  to {
    width: 100%;
  }
}

/* The typewriter cursor effect */
@keyframes blink-caret {
  from,
  to {
    border-color: transparent;
  }
  50% {
    border-color: orange;
  }
}
.nav-btn a:hover {
        color: rgb(2, 109, 216) !important;
        background: rgb(243, 248, 253) !important;
        border: 0.4mm solid rgb(2, 109, 216) !important;
        border-radius: 7mm !important;
      }
  </style>
</head>

<body>

